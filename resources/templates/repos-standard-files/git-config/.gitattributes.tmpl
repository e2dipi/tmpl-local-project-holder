# Common git settings: eol, diff, etc ... (see https://git-scm.com/docs/gitattributes)
# Requires .gitconfig

# Exclude files from exporting when creating an archive
.gitattributes export-ignore
.gitignore     export-ignore

# Set default behavior to automatically normalize line endings.
* text=auto

# Attributes requiring external tools
*.pdf     -text diff=pdf  # diff=pdf  requires xpdf installed
*.PDF     -text diff=pdf  #           use diff=astextplain if not available
*.gif     -text diff=exif # diff=exif requires exiftool installed
*.jpeg    -text diff=exif #           set to `binary` if not available
*.jpeg    -text diff=exif
*.jpeg    -text diff=exif
*.png     -text diff=exif
*.tif     -text diff=exif
*.tiff    -text diff=exif

# Windows only files (use crlf)
*.bat     text eol=crlf  diff=bash
*.cmd     text eol=crlf  diff=bash
*.ps1     text eol=crlf  diff=bash

# Plain text
*.adoc    text
*.csv     text
*.tab     text
*.tsv     text
*.txt     text
*.sql     text

# Treated as plain text
.xls      text
.gsheet   text

# RTF / DOC
*.doc     -text diff=astextplain
*.DOC	    -text diff=astextplain
*.DOCX    -text diff=astextplain
*.DOCX    -text diff=astextplain
*.dot     -text diff=astextplain
*.DOT     -text diff=astextplain
.gdoc     -text diff=astextplain
*.rtf     -text diff=astextplain
*.RTF	    -text diff=astextplain

# Web
*.css	    text  diff=css
*.htm	    text  diff=html
*.html	  text  diff=html
*.md      text  diff=markdown
*.php     text  diff=php
*.scss	  text  diff=css
*.xhtml   text  diff=html

# TeX / LaTeX
*.bibtex  text  diff=bibtex
*.cls     textt diff=textopt
*.tex     text  diff=tex
*.texi*   text  diff=texinfo
*.sty     textt diff=textopt

# Programing languages
*.js      text
*.ts      text

.c        text  diff=cpp
*.h       text  diff=cpp
*.c++     text  diff=cpp
*.h++     text  diff=cpp
*.cpp     text  diff=cpp
*.hpp     text  diff=cpp
*.cc      text  diff=cpp
*.hh      text  diff=cpp

*.cs      text  diff=csharp
*.m       text  diff=matlab
*.py      text  diff=python
*.rb      text  diff=ruby
*.php     text  diff=php
*.pl      text  diff=perl
*.f       text  diff=fortran

*.lisp    text  diff=lisp
*.el      text  diff=lisp
*.r       text  diff=rstats
*.org     text  diff=orgmode
*.rs      text  diff=rust

# Scripts
*.bash     text eol=lf  diff=bash
*.fish     text eol=lf  diff=bash
*.sh       text eol=lf  diff=bash

# Serialisation
*.json     text
*.toml     text
*.xml      text
*.yaml     text
*.yml      text

# Archives
*.7z       binary
*.gz       binary
*.tar      binary
*.tgz      binary
*.zip      binary

# Text files where line endings should be preserved
*.patch    -text

# Set the merge driver for project and solution files
*.filters     text eol=crlf
*.props       text eol=crlf
*.vcxitems    text eol=crlf
*.lsproj      text eol=crlf
*.modelproj   text eol=crlf

*.sqlproj     text eol=crlf
*.vcxproj     text eol=crlf
*.vcproj      text eol=crlf
*.wixproj     text eol=crlf
*.wmaproj     text eol=crlf
*.xproj       text eol=crlf

# Custom for Visual Studio (according to https://gist.github.com/cedricwalter/8706188)
*.sln         text eol=crlf merge=union
*.csproj      text eol=crlf merge=union
*.vbproj      text eol=crlf merge=union
*.fsproj      text eol=crlf merge=union
*.dbproj      text eol=crlf merge=union
